<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/prism_linearlayout"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:gravity="center"
            android:text="Prism Volume"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/prism_h_input"
            android:layout_width="408dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Enter a Height"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/prism_w_input"
            android:layout_width="408dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Enter a Width"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/prism_l_input"
            android:layout_width="408dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Enter a Length"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/prism_result"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:text="Result"
            android:textSize="40sp" />

        <Button
            android:id="@+id/prism_calculate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_700"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
