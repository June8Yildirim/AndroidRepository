<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="quadequation"
            type="com.example.quadraticeqsolver.QuadEquation"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/a_input"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_marginTop="268dp"
            android:layout_marginBottom="7dp"
            android:autofillHints=""
            android:hint="Enter A"
            android:inputType="number"
            android:text="@={quadequation.a}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/b_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/b_input"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_marginBottom="336dp"
            android:autofillHints=""
            android:hint="Enter B"
            android:inputType="number"
            android:text="@={quadequation.b}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/a_input"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/a_input"
            app:layout_constraintTop_toBottomOf="@+id/a_input" />

        <EditText
            android:id="@+id/c_input"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:autofillHints=""
            android:hint="Enter C"
            android:inputType="number"
            android:text="@={quadequation.c}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/b_input"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/b_input" />

        <Button
            android:id="@+id/button"
            android:layout_width="193dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:text="Solve"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:layout_marginBottom="144dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="Result"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
